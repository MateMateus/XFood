@{
    var user = Context.Session.GetString("UserName");
    var role = Context.Session.GetString("UserRole");
}
@* Layout principal: inclui Navbar, RenderBody, Footer e scripts. *@
<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - xFood</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body data-theme="dark">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/#home">xFood</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navmain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/#home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/#about">Sobre</a></li>
                    <li class="nav-item"><a class="nav-link" href="/#categories">Categorias</a></li>
                    <li class="nav-item"><a class="nav-link" href="/#products">Produtos</a></li>
                    <li class="nav-item"><a class="nav-link" href="/#restrict">√Årea restrita</a></li>




                </ul>

                <div class="d-flex gap-2 align-items-center">
                    <button id="themeToggle" class="btn btn-outline-light btn-sm" type="button">üåô Escuro</button>

                    @if (!string.IsNullOrEmpty(user))
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-light btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                üë§ @user
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><span class="dropdown-item-text text-muted">Perfil: @role</span></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="/Account/Logout">Sair</a></li>
                            </ul>
                        </div>

                        <a class="btn btn-outline-light btn-sm ms-2" href="/Products">üçî Produtos</a>
                        <a class="btn btn-outline-light btn-sm ms-2" href="/Users">üë§Usu√°rios</a>
                        <a class="btn btn-outline-light btn-sm ms-2" href="/Categories">Categorias</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light btn-sm" href="/Account/Login">Login</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- OBRIGAT√ìRIO: RenderBody deve vir antes de qualquer section -->
    <main class="container my-4 mt-5 pt-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3">
        <div class="container small d-flex gap-3">
            <span>&copy; @DateTime.Now.Year xFood</span>
            <nav class="ms-auto d-flex gap-3">
                <a href="/#home">Home</a>
                <a href="/#about">Sobre</a>
                <a href="/#categories">Categorias</a>
                <a href="/#products">Produtos</a>
                <a href="/#restrict">√Årea restrita</a>
            </nav>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>window._role = "@role";</script>
</body>
</html>
