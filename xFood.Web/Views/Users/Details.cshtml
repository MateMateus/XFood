@model xFood.Application.DTOs.UserDto
@{
    ViewData["Title"] = "Detalhes do Usuário";
    var role = Context.Session.GetString("UserRole");
    bool isAdmin = string.Equals(role, "Admin", StringComparison.OrdinalIgnoreCase);
    bool isManager = string.Equals(role, "Manager", StringComparison.OrdinalIgnoreCase);
}
<h2>Detalhes do Usuário</h2>
<dl class="row mt-3">
    <dt class="col-sm-3">Nome</dt>
    <dd class="col-sm-9">@Model.Name</dd>
    <dt class="col-sm-3">E-mail</dt>
    <dd class="col-sm-9">@Model.Email</dd>
    <dt class="col-sm-3">Nascimento</dt>
    <dd class="col-sm-9">@Model.DateBirth.ToString("dd/MM/yyyy")</dd>
    <dt class="col-sm-3">Tipo</dt>
    <dd class="col-sm-9">@Model.TypeUserDescription</dd>
    <dt class="col-sm-3">Ativo</dt>
    <dd class="col-sm-9">@(Model.Active ? "Sim" : "Não")</dd>
</dl>
<div class="mt-3 d-flex gap-2">

    @if (isAdmin || isManager)
    {
        <a class="btn btn-warning" href="@Url.Action("Edit", new { id = Model.Id })">Editar</a>
    }
    <a class="btn btn-secondary" href=@Url.Action("Index","Users")>Voltar</a>
</div>
