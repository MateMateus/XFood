@{
    ViewData["Title"] = "xFood — Catálogo";
}

<section id="home" class="hero d-flex align-items-center mb-5">
    <div class="container pt-5">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold mb-2">xFood</h1>
                <p class="lead mb-4">Catálogo simples com filtros por categoria e cards de produtos. Front one-page + API.</p>
                <div class="d-flex gap-2">
                    <a class="btn btn-primary btn-lg" href="/#products">Ver produtos</a>
                    <a class="btn btn-outline-light btn-lg" href="/#categories">Categorias</a>
                </div>
            </div>
            <div class="col-lg-5 text-center">
                <div class="hero-thumb rounded-4"></div>
            </div>
        </div>
    </div>
</section>

<section id="about" class="py-5 border-top">
    <div class="container pt-5">
        <h2 class="h4 mb-3">Sobre</h2>
        <p class="mb-0">Projeto didático inspirado no SaphiraTerror: camadas claras, API REST e UI responsiva em Bootstrap.</p>
    </div>
</section>

<section id="categories" class="py-5 border-top">
    <div class="container pt-5">
        <div class="d-flex align-items-center mb-3">
            <h2 class="h4 mb-0 me-auto">Categorias</h2>
            <button id="btnAllCats" class="btn btn-outline-info btn-sm">Todas</button>
        </div>
        <div id="cat-grid" class="row g-3"><!-- mini-cards --></div>
    </div>
</section>

<section id="products" class="py-5 border-top">
    <div class="container pt-5">
        <div class="d-flex flex-wrap gap-2 align-items-end mb-3">
            <h2 class="h4 mb-0 me-auto">Produtos</h2>
            <div class="ms-auto" style="min-width:280px;">
                <input id="q" class="form-control form-control-sm" placeholder="buscar por nome/descrição..." />
            </div>
        </div>
        <div id="prod-grid" class="row g-3"></div>
        <div id="prod-alert" class="alert alert-danger d-none mt-3">Falha ao carregar produtos.</div>
    </div>
</section>

<section id="restrict" class="py-5 border-top">
    <div class="container pt-5">
        <h2 class="h4 mb-3">Área restrita</h2>
        <p class="mb-3">Acesse com seu usuário para recursos administrativos.</p>
        <a class="btn btn-primary" href="/Account/Login">Ir para Login</a>
    </div>
</section>
