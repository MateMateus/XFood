@model xFood.Application.DTOs.CategoryDto
@{
    ViewData["Title"] = "Editar Categoria";
}
<h2>Editar Categoria</h2>
<form method="post" class="mt-3">

    <div asp-validation-summary="All" class="text-danger"></div>  <!--  summary -->

    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Descrição</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <button class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />  <!--  scripts -->
}


